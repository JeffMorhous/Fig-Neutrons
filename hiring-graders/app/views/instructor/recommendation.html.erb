<!--Following format of student/application.html.erb-->
<div class="reccomendation-form">
  <form action="/instructor/create_recommendation" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <h2>Recommend a Student to Grade a Course</h2>
    <hr>
    <p>First, enter the student's first and last name</p>
    <div class="form-group">
      <label>Student First Name</label>
      <input class="form-control" type="text" name="firstName" required />
      <br>

      <label>Student Last Name</label>
      <input class="form-control" type="text" name="lastName" required />
      <br>

      <label>Student Email</label>
      <input class="form-control" type="text" name="email" required />
      <br>

      <label>Recommended Course to Grade (Enter Course Number)</label>
      <input class="form-control" type="text" name="recCourse" required />
      <br>

      <label>Tell us about the student</label>
      <textarea class="form-control" type="text" name="recText" rows="3"></textarea>
      <br>
      
      <label>Request Student to Grade for this Course?</label>
      <input class="form-control" type="checkbox" name="recRequest" value="true"/>
    </div>
    <div class="row" style="margin-bottom: 5%;">
      <div class="col-md-6">
        <a href="/instructor/profile" class="btn-secondary btn-block btn-lg text-center">Back</a>
      </div>
      <div class="col-md-6">
      <button type="submit" class="btn btn-success btn-block btn-lg">Save</button>
      </div>
    </div>
    <% flash.each do |message_type, message| %>
      <div class="alert alert-<%= message_type %>"><%= message %></div>
    <% end %>
  </form>
</div>