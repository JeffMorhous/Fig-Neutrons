<% flash.each do |message_type, message| %>
<div class="alert alert-<%= message_type %>"><%= message %></div>
<% end %>
<div class="account-form">
  <form action="" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <h2>Login</h2>
    <hr>
    <div class="form-group">
      <label>Email Address</label>
      <input type="email" class="form-control" name="email" required="required">
    </div>
    <div class="form-group">
      <label>Password</label>
      <input type="password" class="form-control" name="password" required="required">
    </div>
    <div class="form-group">
      <label>Select Role:</label>
      <br />
      <input type="radio" value="student" name="roleLogin" required="required" onclick="setAccountFormAction(this)">
      <label>Student</label>
      <input type="radio" value="instructor" name="roleLogin" required="required" onclick="setAccountFormAction(this)">
      <label>Instructor</label>
      <input type="radio" value="admin" name="roleLogin" required="required" onclick="setAccountFormAction(this)">
      <label>Admin</label>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary btn-block btn-lg">Sign In</button>
    </div>
  </form>
  <div class="text-center">Don't have an account? <a href="/user/signup">Sign up</a></div>
</div>
