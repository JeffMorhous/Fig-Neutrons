<div class = "admin">
	<div class = "topnav"> 
	</div>
	<div class = "admin-dashboard">
		<h3> Grader-less Courses </h3>
		<p> Select a course from the table to begin and you will be taken to the grader selection screen </p>
		<div class = "course-table">
			<table>
		  		<tr>
		    		<th>Department and Course Number</th>
		    		<th>Section</th>
		    		<th>Days</th>
		    		<th>Time</th>
		    		<th>Location</th>
		    		<th>Instructor</th>
		  		</tr>
		  		<% @courses.each do |course| %>
		    		<tr>
		     	 		<td><%= course.department %> <%= course.course_number %></td>
		      			<td><%= course.section_number%></td>
		      			<td><%= course.days %></td>
		      			<td>
		      				<%= course.start_time %> - <%=course.end_time%>
		      			</td>
		      			<td>
		      				<% if course.location.strip.empty? %>
		            			N/A
		          			<% else %>
		            			<%= course.location %>
		           			<% end %>	
		           		</td>
		  				<td><%= course.instructor %></td>
		  				<td class = "hidden">
			      			<%= button_to "Add Grader", '/admin/section/', params: {id: course.id}, :method => :get %>
			      		</td>
		   			</tr>
				<% end %>
			</table>
		</div>	
	</div>
</div>