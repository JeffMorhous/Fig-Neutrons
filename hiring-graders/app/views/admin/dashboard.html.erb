<div class = "admin">
	<div class = "topnav"> 
	</div>
	<div class = "admin-dashboard">
		<h3> Grader-less Courses </h3>
		<p> Select a course from the table to begin and you will be taken to the grader selection screen </p>
		<div class = "course-table">
			<table>
		  		<tr>
		    		<th>Department</th>
		    		<th>Course Number</th>
		    		<th>Days</th>
		    		<th>Time</th>
		    		<th>Location</th>
		    		<th>Instructor</th>
		  		</tr>
		  		<% 5.times do %>
			  		<tr>
			     	 	<td>Test</td>
			      		<td>Test</td>
			      		<td>Test</td>
			      		<td>Test</td>
			      		<td>Test</td>
			      		<td>Test</td>
			      		<td class = "hidden">
			      			<form action = "/admin/findclass?:id=2221">
			      				<input type="submit" value="Add Grader" />
			      			</form>
			      		</td>
			   		</tr>
		   		<% end %>
		  		<% @courses.each do |course| %>
		    		<tr>
		     	 		<td><%= course.department %></td>
		      			<td><%= course.course %></td>
		      			<td><%= course.days %></td>
		      			<td><%= course.start_time %> - <%= course.end_time %></td>
		      			<td>
		      				<% if course.location.strip.empty? %>
		            			N/A
		          			<% else %>
		            			<%= course.location %>
		           			<% end %>	
		           		</td>
		  				<td><%= course.instructor %></td>
		  				<td class = "hidden">
			      			<form action = "/admin/findclass?:id="<%=course.course%>>
			      				<input type="submit" value="Add Grader" />
			      			</form>
			      		</td>
		   			</tr>
				<% end %>
			</table>
		</div>	
	</div>
</div>