<div class="grade-form">
  <form action="/application/create" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <h2><%= @studentName %>'s Grader Application</h2>
    <hr>
    <p>Enter the grades for <%=@num %> CSE courses you have taken</p>
    <small>Example:</small>
    <div class="form-group">
      <div class="row">
        <div class="col-md-5">
          <label>Course Number</label>
          <input class="form-control" type="text" name="courseNum" value="2221" disabled />
        </div>
        <div class="col-md-5">
          <label >Grade</label>
          <input class="form-control" type="text" name="grade" value="A" disabled />
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="row gradeRow">
        <div class="col-md-5">
          <label>Course Number</label>
          <input class="form-control courseNum" type="text" name="courseNum1" required="required"/>
        </div>
        <div class="col-md-5">
          <label>Grade</label>
          <input class="form-control grade" type="text" name="grade1" required="required"/>
        </div>
        <div class="col-md-2">
          <i class="fa fa-plus-circle fa-2x classAddIcon" onclick="addGradeRow()"></i>
        </div>
      </div>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary btn-block btn-lg">Save</button>
    </div>
  </form>
  <div>
    <button class="btn btn-primary btn-block btn-lg" onclick="displayWeeklyCalendar()">Click Here to Add Your Availability</button>
  </div>
  <div class="targetCalendar container" style="margin: auto; width: 50%; height: 100%; display: flex; flex-direction: row; justify-content: center;">
    <div id="targetCalendar"></div>
  </div>
</div>